{% extends "base.twig" %}

{% block content %}
    
  <h1>Prayers</h1>

  {% for prayer in prayers %}
    <div class="card">
      <h2>{{ prayer.title }}</h2>
      <p>{{ prayer.body }}</p>
      <small>Posted: {{ prayer.date_posted }}</small>
    </div>
  {% else %}
    <p>No prayers yet.</p>
  {% endfor %}

  <!-- Button to submit a new prayer -->
  <div>
    <a href="/prayers/request">
      <button type="button">Submit a Request for Prayer</button>
    </a>
  </div>

{% endblock %}