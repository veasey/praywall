{% extends "base.twig" %}

{% block content %}
  <h1>Moderator Settings</h1>

  <form method="post" action="/moderate/settings" class="moderator-settings-form">
    
    <div class="form-group">
      <label for="automatic_approval">
        <input type="checkbox" id="automatic_approval" name="automatic_approval" {% if automatic_approval == 'true' %}checked{% endif %}>
        Auto-approve prayers
      </label>
    </div>

    <div class="form-group">
      <label for="email_notifications">
        <input type="checkbox" id="email_notifications" name="email_notifications" {% if email_notifications == 'true' %}checked{% endif %}>
        Send email when a new prayer is submitted
      </label>
    </div>

    <button type="submit" class="save-button">Save Settings</button>
  </form>
{% endblock %}