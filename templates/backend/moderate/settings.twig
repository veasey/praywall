{% extends "base.twig" %}

{% block content %}
  <h1>Moderator Settings</h1>

  <form method="post" action="/moderate/settings" class="moderator-settings-form">
    <div class="form-group">
      <label for="auto_approve">
        <input type="checkbox" id="auto_approve" name="auto_approve" {% if settings.automatic_approval == 'true' %}checked{% endif %}>
        Auto-approve prayers
      </label>
    </div>

    <div class="form-group">
      <label for="notify_email">
        <input type="checkbox" id="email_notifications" name="notify_email" {% if settings.email_notifications == 'true' %}checked{% endif %}>
        Send email when a new prayer is submitted
      </label>
    </div>

    <button type="submit" class="save-button">Save Settings</button>
  </form>
{% endblock %}