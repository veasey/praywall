<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Prayer Wall{% endblock %}</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/header.css">
</head>
<body>

    <div class="header">
        <div class="container">
            
            <!-- Menu options -->
            <div class="header-menu">
                {% if user %}
                    <p>Welcome, {{ user.name }}!</p>
                    <a href="/logout">Logout</a>
                {% else %}
                    <a href="/login">Login</a>
                    <a href="/register">Register</a> <!-- example extra menu link -->
                {% endif %}
            </div>

            <!-- Title -->
            <a href="/" class="header-title">
                PrayWall
            </a>

        </div>
    </div>

    <div class="container">

        {% if errors is defined and errors %}
            {% for error in errors %}
                <div class="error">
                    <p>{{ error }}</p>
                </div>
            {% endfor %}
        {% endif %}

        {% if messages is defined and messages %}
            {% for message in messages %}
                <div class="message">
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
        {% endif %}

        {% block content %}{% endblock %}
    </div>
</body>
</html>